<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/accelerometer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AcelerÃ³metro: "
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/proximity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proximidad: "
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_below="@id/accelerometer_text"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/light_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/proximity_text"
        android:layout_marginTop="16dp"
        style="?android:attr/progressBarStyleHorizontal"/>

</RelativeLayout>
